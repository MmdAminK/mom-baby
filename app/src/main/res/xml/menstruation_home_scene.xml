<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/menstruation_linear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menstruation_calendar_card">
            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue="1" />
        </Constraint>

        <Constraint
            android:id="@+id/menstruation_calendar_card"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent=".25"
            android:minHeight="130dp"
            style="@style/Calendar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue="1" />
        </Constraint>

        <Constraint
            android:id="@+id/open_calendar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/menstruation_calendar_card"
            app:layout_constraintBottom_toBottomOf="@+id/menstruation_calendar_card"
            app:layout_constraintEnd_toEndOf="@+id/menstruation_calendar_card"
            app:layout_constraintStart_toStartOf="@+id/menstruation_calendar_card"
            android:rotation="-90"
            android:elevation="5dp">
            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue="1" />
        </Constraint>

        <Constraint
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/menstruation_dialog"
            app:layout_constraintTop_toBottomOf="parent" />

    </ConstraintSet>

    <!--    ******************************END*************************************-->
    <!--    ******************************END*************************************-->

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/menstruation_linear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menstruation_calendar_card">
            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue=".1" />
        </Constraint>

        <Constraint
            android:id="@+id/menstruation_dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_height="0dp"
            android:layout_width="match_parent" />
        <Constraint
            android:id="@+id/menstruation_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue=".3" />
        </Constraint>

        <Constraint
            android:id="@+id/menstruation_calendar_card"
            android:layout_width="0dp"
            android:layout_height="100dp"
            style="@style/Calendar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue="0" />
        </Constraint>

        <Constraint
            android:id="@+id/open_calendar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="17.5dp"
            app:layout_constraintTop_toBottomOf="@+id/menstruation_calendar_card"
            app:layout_constraintBottom_toBottomOf="@+id/menstruation_calendar_card"
            app:layout_constraintEnd_toEndOf="@+id/menstruation_calendar_card"
            app:layout_constraintStart_toStartOf="@+id/menstruation_calendar_card"
            android:rotation="-90"
            android:elevation="5dp">
            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue="0" />
        </Constraint>
    </ConstraintSet>

    <!--    ******************************END2*************************************-->
    <!--    ******************************END2*************************************-->

    <ConstraintSet android:id="@+id/end2">
        <Constraint
            android:id="@+id/menstruation_calendar_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/Calendar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@+id/menstruation_linear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menstruation_calendar_card">
            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue=".1" />
        </Constraint>

        <Constraint
            android:id="@+id/open_calendar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardElevation="2dp"
            android:elevation="5dp"
            android:rotation="-270"
            app:cardCornerRadius="17.5dp"
            app:layout_constraintTop_toBottomOf="@+id/menstruation_calendar_card"
            app:layout_constraintBottom_toBottomOf="@+id/menstruation_calendar_card"
            app:layout_constraintEnd_toEndOf="@+id/menstruation_calendar_card"
            app:layout_constraintStart_toStartOf="@+id/menstruation_calendar_card" />

        <Constraint
            android:id="@+id/menstruation_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue=".3" />
        </Constraint>
    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        app:autoTransition="none">
        <OnClick app:targetId="@+id/menstruation_show_dialog" />

    </Transition>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/start"
        app:autoTransition="none">
        <OnClick app:targetId="@+id/menstruation_dialog_back" />

    </Transition>

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end2"
        app:autoTransition="none">
        <OnClick app:targetId="@+id/open_calendar" />

    </Transition>
</MotionScene>
