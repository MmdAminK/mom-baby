<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/pregnant_status_back"
            android:alpha=".35"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.app.mombaby.views.AppActionBar
            android:id="@+id/bmi_result_action_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="BMI محاسبه "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bmi_result_action_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/bmi_result_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bmi_result_action_bar">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1.4"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="4dp">

                        <TextView
                            android:id="@+id/bmi_result_height"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:fontFamily="@font/iran_sans"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="57 سانتی متر"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".6"
                        android:fontFamily="@font/iran_sans"
                        android:gravity="center"
                        android:text="قد"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1.4"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="4dp">

                        <TextView
                            android:id="@+id/bmi_result_weight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/iran_sans"
                            android:gravity="center"
                            android:text="57 کیلوگرم"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".6"
                        android:ellipsize="end"
                        android:fontFamily="@font/iran_sans"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="وزن"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bmi_result_linear">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFE8E4"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iran_sans"
                            android:gravity="center"
                            android:paddingTop="12dp"
                            android:text="شاخص توده بدنی شما"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="80dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:background="#ff000000" />

                        <TextView
                            android:id="@+id/bmi_result_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iran_sans_black"
                            android:gravity="center"
                            android:paddingTop="12dp"
                            android:textColor="@color/appDarkPurple"
                            android:textSize="20sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="100"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="35"
                                android:fontFamily="@font/iran_sans"
                                android:gravity="center_horizontal"
                                android:text="18.5"
                                android:textColor="#6E676F"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="30"
                                android:fontFamily="@font/iran_sans"
                                android:gravity="center_horizontal"
                                android:text="25"
                                android:textColor="#6E676F"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="20"
                                android:fontFamily="@font/iran_sans"
                                android:gravity="center_horizontal"
                                android:text="30"
                                android:textColor="#6E676F"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/bmi_result_sign_constraint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="4dp">

                            <LinearLayout
                                android:id="@+id/bmi_result_sign_linear"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="5dp"

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/bmi_result_sign"
                                    android:layout_width="10dp"
                                    android:layout_height="11dp"
                                    android:layout_gravity="right"
                                    android:src="@drawable/ic_triangle_sign" />
                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="17.5dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="100">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="35dp"
                                    android:layout_weight="17.5"
                                    android:background="#3D51FC" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="35dp"
                                    android:layout_weight="32.5"
                                    android:background="#00E400" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="35dp"
                                    android:layout_weight="25"
                                    android:background="#FFDF00" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="35dp"
                                    android:layout_weight="25"
                                    android:background="#FF0000" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="16dp"
                            android:weightSum="100">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="17.5"
                                android:fontFamily="@font/iran_sans"
                                android:gravity="center"
                                android:text="لاغر"
                                android:textColor="#6E676F"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="32.5"
                                android:fontFamily="@font/iran_sans"
                                android:gravity="center"
                                android:text="نرمال"
                                android:textColor="#6E676F"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="25"
                                android:fontFamily="@font/iran_sans"
                                android:gravity="center"
                                android:text="اضافه وزن"
                                android:textColor="#6E676F"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="25"
                                android:fontFamily="@font/iran_sans"
                                android:gravity="center"
                                android:text="چاق"
                                android:textColor="#6E676F"
                                android:textSize="15sp" />

                        </LinearLayout>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="24dp"
                            android:src="@drawable/bmi_result_image" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
