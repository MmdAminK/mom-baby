<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="12dp"
                android:text="ثبت دوره قاعدگی"
                android:textColor="@color/black"
                android:fontFamily="@font/iran_sans_bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_medium"
                android:paddingRight="16dp"
                android:layout_marginTop="12dp"
                android:text="آخرین زمان قاعدگی"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.app.mombaby.views.AppPersianCalendar
                android:id="@+id/menstruation_dialog_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_medium"
                android:paddingRight="16dp"
                android:layout_marginTop="12dp"
                android:text="مدت زمان بین دو خونریزی (روز)"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.app.mombaby.views.MomBabyNumberPicker
                android:id="@+id/menstruation_dialog_between_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:np_dividerThickness="0dp"
                app:np_max="41"
                app:np_min="19"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_medium"
                android:paddingRight="16dp"
                android:layout_marginTop="12dp"
                android:text=" طول دوره خونریزی (روز)"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.app.mombaby.views.MomBabyNumberPicker
                android:id="@+id/menstruation_dialog_period_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:np_dividerThickness="0dp"
                app:np_max="8"
                app:np_min="2"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/menstruation_dialog_submit"
                style="@style/roundedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonBackColor"
                android:fontFamily="@font/iran_sans_bold"
                android:minHeight="60dp"
                android:text="ذخیره اطلاعات"
                android:textColor="#6D6870"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toTopOf="@+id/sign_up_later"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>
