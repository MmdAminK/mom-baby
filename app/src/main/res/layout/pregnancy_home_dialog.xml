<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="12dp"
                android:text="تعیین اولین روز بارداری"
                android:textColor="@color/black"
                android:fontFamily="@font/iran_sans_bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_medium"
                android:paddingRight="16dp"
                android:layout_marginTop="12dp"
                android:text="آخرین زمان قاعدگی"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.app.mombaby.views.AppPersianCalendar
                android:id="@+id/reminder_dialog_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_medium"
                android:paddingRight="16dp"
                android:layout_marginTop="16dp"
                android:text="اسم نی‌نی :"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                app:cardCornerRadius="29dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@+id/verify_phone_label">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pregnancy_home_dialog_baby_name_text_field"
                    style="@style/roundedEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:boxStrokeErrorColor="#E1012A"
                    app:endIconMode="clear_text"
                    app:errorTextAppearance="@style/ErrorTextAppearance"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pregnancy_home_dialog_baby_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/iran_sans"
                        android:gravity="center_vertical|right"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:letterSpacing=".05"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/pregnancy_home_dialog_submit"
                style="@style/roundedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonBackColor"
                android:fontFamily="@font/iran_sans_bold"
                android:minHeight="60dp"
                android:text="ذخیره اطلاعات"
                android:textColor="#6D6870"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toTopOf="@+id/sign_up_later"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>
