<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/forget_password_verify_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/login_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/forget_password_verify_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleX=".85"
            android:scaleY=".85"
            android:layout_marginTop="4dp"
            android:src="@drawable/password_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/forget_password_verify_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans_bold"
            android:text="بازیابی رمز"
            android:textStyle="bold"
            android:paddingRight="12dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/forget_password_verify_image"
            tools:layout_editor_absoluteX="-40dp" />

        <TextView
            android:id="@+id/forget_password_verify_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans_medium"
            android:maxLines="1"
            android:text="کد ارسال شده را وارد کنید"
            android:ellipsize="end"
            android:paddingRight="12dp"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/forget_password_verify_title" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/forget_password_verify_nested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forget_password_verify_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_sans_medium"
                    android:paddingRight="16dp"
                    android:text="کد پیامکی"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="29dp"
                    app:cardElevation="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/verify_phone_label">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/verify_code_text_field"
                        style="@style/roundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:boxStrokeErrorColor="#E1012A"
                        app:endIconMode="clear_text"
                        app:errorTextAppearance="@style/ErrorTextAppearance"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/verify_code_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/iran_sans"
                            android:gravity="center"
                            android:hint="کد تایید 4 رقمی پیامک شده "
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:letterSpacing=".1"
                            android:maxLength="4"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/forget_password_verify_submit_button"
                    style="@style/roundedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#FAC4F2"
                    android:fontFamily="@font/iran_sans_bold"
                    android:minHeight="60dp"
                    android:text="درخواست ورود"
                    android:textColor="#6D6870"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
