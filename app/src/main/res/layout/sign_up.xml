<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/verify_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/login_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/verify_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleX=".85"
            android:scaleY=".85"
            android:layout_marginTop="4dp"
            android:src="@drawable/sign_up_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/verify_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans_bold"
            android:text="تکمیل اطلاعات"
            android:textStyle="bold"
            android:paddingRight="12dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/verify_image" />

        <TextView
            android:id="@+id/verify_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans_medium"
            android:maxLines="1"
            android:text="لطفا اطلاعات خود را تکمیل فرمائید"
            android:ellipsize="end"
            android:paddingRight="12dp"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/verify_title"
            tools:layout_editor_absoluteX="-40dp" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/verify_nested"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/sign_up_submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verify_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_sans_medium"
                    android:paddingRight="16dp"
                    android:text="نام"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="29dp"
                    app:cardElevation="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/verify_phone_label">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sign_up_first_name_text_field"
                        style="@style/roundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:boxStrokeErrorColor="#E1012A"
                        app:endIconMode="clear_text"
                        app:errorTextAppearance="@style/ErrorTextAppearance"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sign_up_first_name_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/iran_sans"
                            android:gravity="center_vertical|right"
                            android:hint="نام خود را وارد کنید"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:letterSpacing=".05"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_sans_medium"
                    android:paddingRight="16dp"
                    android:text="نام خانوادگی"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="29dp"
                    app:cardElevation="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/verify_phone_label">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sign_up_last_name_text_field"
                        style="@style/roundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:boxStrokeErrorColor="#E1012A"
                        app:endIconMode="clear_text"
                        app:errorTextAppearance="@style/ErrorTextAppearance"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sign_up_last_name_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/iran_sans"
                            android:gravity="center_vertical|right"
                            android:hint="نام خانوادگی خود را وارد کنید"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:letterSpacing=".05"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_sans_medium"
                    android:paddingRight="16dp"
                    android:text="سن"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="29dp"
                    app:cardElevation="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/verify_phone_label">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sign_up_age_text_field"
                        style="@style/roundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:boxStrokeErrorColor="#E1012A"
                        app:endIconMode="clear_text"
                        app:errorTextAppearance="@style/ErrorTextAppearance"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sign_up_age_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/iran_sans"
                            android:gravity="center_vertical|right"
                            android:hint="سن خود را وارد کنید"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:letterSpacing=".05"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_sans_medium"
                    android:paddingRight="16dp"
                    android:text="ایمیل"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="29dp"
                    app:cardElevation="4dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sign_up_email_text_field"
                        style="@style/roundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:boxStrokeErrorColor="#E1012A"
                        app:endIconMode="clear_text"
                        app:errorTextAppearance="@style/ErrorTextAppearance"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sign_up_email_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/iran_sans"
                            android:gravity="center_vertical|right"
                            android:hint="ایمیل خود را وارد کنید"
                            android:imeOptions="actionDone"
                            android:inputType="textWebEmailAddress"
                            android:letterSpacing=".05"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/sign_up_submit"
            style="@style/roundedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/buttonBackColor"
            android:fontFamily="@font/iran_sans_bold"
            android:minHeight="60dp"
            android:text="ورود"
            android:textColor="#6D6870"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/sign_up_later"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/sign_up_later"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:layout_marginBottom="4dp"
            android:text="بعدا تکمیل میکنم !"
            android:textColor="#EF476F"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
