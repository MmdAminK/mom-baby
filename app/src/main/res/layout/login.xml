<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/login_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/login_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/login_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleX=".85"
            android:scaleY=".85"
            android:layout_marginTop="4dp"
            android:src="@drawable/login_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans_bold"
            android:text="ورود به مام بیبی"
            android:textStyle="bold"
            android:paddingRight="12dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/login_image"
            tools:layout_editor_absoluteX="-40dp" />

        <TextView
            android:id="@+id/login_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans_medium"
            android:text="برای ورود از شماره موبایل خود استفاده کنید"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingRight="12dp"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/login_title"
            tools:layout_editor_absoluteX="-40dp" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/login_nested"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/login_submit_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/login_phone_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_sans_medium"
                    android:paddingRight="16dp"
                    android:text="شماره موبایل خود را وارد کنید"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="29dp"
                    app:cardElevation="3dp"
                    app:layout_constraintTop_toBottomOf="@+id/login_phone_label">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/login_phone_text_field"
                        style="@style/roundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:boxStrokeErrorColor="#E1012A"
                        app:counterMaxLength="11"
                        app:endIconMode="clear_text"
                        app:errorTextAppearance="@style/ErrorTextAppearance"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/login_phone_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/iran_sans"
                            android:gravity="center_vertical|left"
                            android:hint="@string/loginPhoneNumberHint"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:letterSpacing=".1"
                            android:maxLength="11"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/login_captcha_text_field_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/iran_sans_medium"
                    android:paddingRight="16dp"
                    android:text="کد امنیتی"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/login_captcha"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center"
                        android:layout_weight=".75"
                        android:layout_marginLeft="16dp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        app:cardCornerRadius="29dp"
                        app:cardElevation="3dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/login_captcha_text_field"
                            style="@style/roundedEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:endIconMode="clear_text"
                            app:errorTextAppearance="@style/ErrorTextAppearance"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/login_captcha_code"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/iran_sans"
                                android:gravity="center_vertical"
                                android:hint="کد مقابل را وارد کنید"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:letterSpacing=".1"
                                android:maxLength="4"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/login_submit_button"
            style="@style/roundedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/buttonBackColor"
            android:fontFamily="@font/iran_sans_bold"
            android:minHeight="60dp"
            android:text="درخواست ورود"
            android:textColor="#6D6870"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/login_terms" />

        <TextView
            android:id="@+id/login_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="قوانین و مقررات مام بیبی"
            android:textColor="@color/appDarkPurple"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:text="V 1.0.0\nPowered by VestaTeam.net"
            android:textColor="#707070"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
